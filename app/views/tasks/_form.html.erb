<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [['新規','新規'],['進行中','進行中'],['完了','完了']] %>
  
  <%= f.label :contet,'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit submit %>
<% end %>